<%= form_with(model: comment, html: {class: "comment-form"}) do |form| %>
  <% if comment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>
      <ul>
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.text_field :text, placeholder: "Write your comment here", class: "form-control" %>
  </div>
  <div>
    <%= form.text_field :account_id, value: current_account.id , type: "hidden" %>
  </div>
  <div>
    <%= form.text_field :account_username, value: current_account.username , type: "hidden" %>
  </div>
  <div>
    <%= form.text_field :post_id  , type: "hidden"%>
  </div>
  <div class="form-group">
    <%= form.submit "Post Comment", class: "btn btn-primary" %>
  </div>
<% end %>
